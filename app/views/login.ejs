<!DOCTYPE html>
<html lang="en">

<%- include('partial/head', {title: "Login"}) %>

    <body>
        <nav class="navbar navbar-dark bg-blue">
            <a class="navbar-brand" href="/login"><img class="w-40px" src="logo.png" alt="ntu logo">
                <span class="navbar-text text-white ml-3 h4">
                Face-Recognition Attendance-Taking System
            </span>
            </a>
        </nav>

        <div class="container h-100 center-from-navbar">
            <div class="d-flex justify-content-center">
                <div class="user_card">
                    <div class="d-flex justify-content-center">
                        <div class="brand_logo_container">
                            <img src="face-recognition.jpg" class="brand_logo" alt="Logo">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center form_container">
                        <form action="/login" method="POST">
                            <div class="input-group mb-3">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" name="email" class="form-control input-email" placeholder="email">
                            </div>
                            <div class="input-group mb-2">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" name="password" class="form-control input-pass" placeholder="password">
                            </div>
                            <div class="login_container">
                                <button type="submit" name="button" class="btn login_btn hover-shadow">Login</button>
                            </div>
                        </form>
                    </div>

                    <div class="mt-4">
                        <div class="d-flex justify-content-center">
                            <a href="/changePassword" class="text-white">Change password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            var msgType = null
            var msg = null
            var flashError = null

            $(document).ready(function() {
                alertify.set('notifier', 'position', 'top-center');

                <% if (locals.msgType) { %>
                msg = "<%=msg%>"
                msgType = "<%=msgType%>"
                <% } %>

                switch (msgType) {
                    case "success":
                        alertify.success(msg)
                        break

                    case "error":
                        alertify.error(msg)
                        break

                    case "warning":
                        alertify.warning(msg)
                        break

                    default:
                        break
                }

                <% if (messages.error) { %>
                flashError = "<%=messages.error%>"
                alertify.error(flashError)
                <% } %>
            })
        </script>
    </body>

</html>